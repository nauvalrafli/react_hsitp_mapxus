<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <org.maplibre.android.maps.MapView
        android:id="@+id/mapView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <include layout="@layout/detail_card" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/sv_navigation_point"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/mapView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="1500dp"
        >

        <LinearLayout
            app:layout_constraintTop_toTopOf="@id/mapView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/lighter_gray"
            android:padding="12dp"
            android:layout_margin="16dp"
            android:scrollbars="vertical"
            >

            <!-- START Location -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                >

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/tv_start_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Select Start Location"
                    android:textColor="@color/black"
                    android:background="@drawable/bg_text_field"
                    android:drawablePadding="8dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <ImageView
                    android:id="@+id/btn_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@drawable/baseline_my_location_24"
                    android:layout_marginRight="12dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- STOP Location -->
            <TextView
                android:id="@+id/tv_stop_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Stop Location"
                android:textColor="@color/black"
                android:background="@drawable/bg_text_field"
                android:padding="12dp"
                android:drawablePadding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_show_route_navigation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Show Route"
                    android:textAllCaps="false"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white"
                    android:drawableStart="@drawable/ic_direction"
                    android:drawableTint="@color/white"
                    android:drawablePadding="8dp"
                    />

                <Button
                    android:id="@+id/btn_start_navigation_navigation"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Start Navigation"
                    android:textAllCaps="false"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white"
                    android:drawableStart="@drawable/ic_navigation"
                    android:drawableTint="@color/white"
                    android:drawablePadding="8dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <include layout="@layout/instruction_card" app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>