<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_route_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:visibility="gone"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:layout_anchor="@id/bottomSheet"
    app:layout_anchorGravity="top|center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="6dp">

            <!-- Previous Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/nav_previous_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:enabled="false"
                app:icon="@drawable/ic_arrow_left"
                app:iconTint="@color/blue"
                app:backgroundTint="@android:color/transparent"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.IconButton"
                />

            <!-- Text Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingHorizontal="16dp">

                <TextView
                    android:id="@+id/nav_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Navigation Title"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/nav_distance_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/nav_time_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray" />

            </LinearLayout>

            <!-- Icon -->
            <ImageView
                android:id="@+id/nav_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_dot"
                android:contentDescription="Navigation Icon"
                android:visibility="gone" />

            <!-- Next Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/nav_next_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:icon="@drawable/ic_arrow_right"
                app:iconTint="@color/blue"
                app:backgroundTint="@android:color/transparent"
                app:iconGravity="textEnd"
                style="@style/Widget.Material3.Button.IconButton"
                />

        </LinearLayout>

        <!-- Step Indicators -->
        <LinearLayout
            android:id="@+id/step_indicators_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <!-- Step indicators will be added programmatically -->

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>

